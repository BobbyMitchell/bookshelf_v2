<h1><%= @book.title %></h1>
<h1><%= "by #{@book.author}"  %></h1>
<h2><%= @book.genre %></h2>
<h1><%= "*" * @book.rating %></h1>

<!-- display current users rating of the book if it exitists -->
<% if current_user.books.include? @book  %>
<h1><%= current_user.user_books.where(book_id = @book_id)[0].rating %></h1>

<% end %>


<% if current_user.books.include? @book  %>
   <% if current_user.user_books.find{|f| f.book_id == @book.id}.rating != nil %>
<h2><%= current_user.user_books.find{|f| f.book_id == @book.id}.rating %> </h2>
<% end %>
<% end %>




<%= cl_image_tag(@book.photo.path, width: 360, height: 240, crop: :fill)  %>

<%= render "user_book_form" %>






<h2><% @book.users do |user| %></h2>
<h2><%= user.email %></h2>
<% end %>

<h3><%= @book.have_read ? "You have read this book" : "You have not read this book" %></h3>
<h2><%= link_to "Edit this book", edit_book_path %></h2>
<h2><%= link_to "Back to Library", books_path %></h2>
<h2> <%= link_to "My Bookshelf", my_books_books_path %> </h2>
