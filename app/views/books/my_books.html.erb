<h1>My Bookshelf</h1>

<% @my_books.each do |user_book| %>
<h2><%= link_to user_book.book.title, book_path(user_book.book)%></h2>
<h2><%= user_book.book.author %></h2>
<%= cl_image_tag(user_book.book.photo.path, width: 128, height: 200, crop: :fill)  %>
<% end %>

<h2><%= link_to "Back to Library", books_path %></h2>
