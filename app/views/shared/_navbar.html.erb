<!-- Left Navigation -->
  <!-- Logo -->
<div class="navbar-wagon-left hidden-xs hidden-sm">
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%=image_tag "planet01.png" %>
  <% end %>
  <div class="name">  On The Next World </div>
</div>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Find a book", new_book_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "My Bookshelf", my_books_books_path, class: "navbar-wagon-item navbar-wagon-link" %>
