      <%= link_to "My Bookshelf", my_books_books_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "My Reading List", my_reading_list_books_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "All Books", books_path, class: "navbar-wagon-item navbar-wagon-link" %>
